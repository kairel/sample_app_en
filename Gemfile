source 'https://rubygems.org'

gem 'rails'

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'therubyracer', :platform => :ruby

end

gem 'jquery-rails'

group :test do
  gem 'capybara'
end

group :production do
  gem 'pg'
end